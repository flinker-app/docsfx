{
  "scripts": {
    "browser-livereload": "browser-sync start --server _site/ --port 8080 --files='_site/**/*'",
    "watch": "npm-run-all --parallel watch:build browser-livereload",
    "watch:build": "nodemon --watch . --ext md,yml,json --ignore _site/** --ignore node_modules/** --delay 500ms --exec \"npm run build --silent\"",
    "build": "docfx build"
  },
  "devDependencies": {
    "browser-sync": "^2.27.11",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5"
  }
}
