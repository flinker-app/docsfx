{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}",
          
        ],
        "exclude": [
          "_site/**"
        ]
      },
            { "files": "_media/**/*.{png,jpg,jpeg,gif}", "dest": "docsfx/_media" }  // For images

    ],
    "resource": [
      {
        "files": [
          "_media/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "my-template"
    ],
    "globalMetadata": {
      "_appLogoPath": "",
      "_appName": "docs",
      "_appTitle": "docs",
      "_appFooter": "<div id=\"footer\" style=\" flex-direction: column;display: flex;\"><span style=\"margin-top: 10px;\"><a href=\"https://docs.flinker.app/\" target=\"_blank\">Home</a> | <a href=\"https://outlook.office365.com/book/SupportConsultingonlinemeeting@flinker.app/\" target=\"_blank\">Support</a> | <a href=\"https://www.flinker.app/data-protection\" target=\"_blank\">Privacy</a></span><img src=\"/_media/microsoft-partner-logo.jpeg\" alt=\"Microsoft Partner\" style=\"margin-top: 20px; margin-bottom: 20px; max-width: 100px;\" /><span>&copy; 2024 Flinker GmbH. All rights reserved.</span></div>",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
